# ============================================
# SERVER CONFIGURATION
# ============================================

# Port number for the Express server
PORT=3000

# Application environment (development, production, test)
NODE_ENV=development

# ============================================
# MYSQL DATABASE CONFIGURATION
# ============================================

# MySQL database host address
DB_HOST=localhost

# MySQL database port number
DB_PORT=3306

# MySQL database username
DB_USER=root

# MySQL database password (leave empty if no password)
DB_PASSWORD=

# MySQL database name
DB_NAME=sims_ppob_db

# ============================================
# JWT CONFIGURATION
# ============================================

# Secret key for JWT token signing (minimum 32 characters recommended)
JWT_SECRET=your_secret_key_min_32_characters_long

# JWT token expiration time (format: number followed by time unit: s, m, h, d)
# Examples: 1h, 12h, 24h, 7d
JWT_EXPIRES_IN=12h

# ============================================
# APPLICATION URL
# ============================================

# Base URL for the application (used for file URLs and API endpoints)
APP_URL=http://localhost:3000
